<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_detail_activity_height"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/color_list_item_activity_detail"
        android:layout_width="@dimen/default_spacing"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/tighter_spacing"
        android:layout_marginStart="@dimen/tighter_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/party_list_item_activity_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tighter_spacing"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/votes_list_item_activity_detail"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toEndOf="@id/color_list_item_activity_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/votes_list_item_activity_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_spacing"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/percentage_list_item_activity_detail"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toEndOf="@id/party_list_item_activity_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/percentage_list_item_activity_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_spacing"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/elects_list_item_activity_detail"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/votes_list_item_activity_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/elects_list_item_activity_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_spacing"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/percentage_list_item_activity_detail"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
