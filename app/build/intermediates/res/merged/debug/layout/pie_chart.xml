<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pie_chart_height"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pie_chart_listview_height"
        android:layout_gravity="center_horizontal|bottom">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRow">

            <TextView
                android:layout_width="@dimen/party_textview_height"
                android:layout_height="wrap_content"
                android:text="@string/party"
                android:gravity="center"/>

            <TextView
                android:layout_width="@dimen/votes_textview_width"
                android:layout_height="wrap_content"
                android:text="@string/votes"
                android:gravity="center"/>

            <TextView
                android:layout_width="@dimen/votesp_textview_width"
                android:layout_height="wrap_content"
                android:text="@string/votesP"
                android:gravity="center"
                android:layout_marginLeft="@dimen/votesp_textview_marginleft"/>

            <TextView
                android:layout_width="@dimen/elects_textview_width"
                android:layout_height="wrap_content"
                android:text="@string/elects"
                android:layout_marginLeft="@dimen/elects_textview_marginleft"/>
        </TableRow>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewPieChart"
            android:layout_below="@id/tableRow"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/votesFloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="@dimen/margin_info_floatingbutton"
        android:src="@android:drawable/ic_dialog_email" />

</FrameLayout>