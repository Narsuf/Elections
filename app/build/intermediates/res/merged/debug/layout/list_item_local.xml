<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_list_item"
        android:id="@+id/cityFlag"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/cityName" />

    <TextView
        android:layout_width="@dimen/width_textview_local"
        android:layout_height="@dimen/height_list_item"
        android:text=""
        android:textSize="@dimen/size_text_list_general"
        android:id="@+id/cityName"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="@dimen/padding_text_list_local" />

</RelativeLayout>