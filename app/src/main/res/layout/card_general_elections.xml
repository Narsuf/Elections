<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_spacing"
    android:layout_marginTop="@dimen/tighter_spacing"
    android:layout_marginBottom="@dimen/tighter_spacing"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pie_chart_height">

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/pie_chart_card_general_elections"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/loosest_spacing"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/year_card_general_elections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_text_size_year_general_elections"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@id/pie_chart_card_general_elections"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@id/pie_chart_card_general_elections"
            card_view:layout_constraintVertical_bias="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
